{% extends "base.html.twig" %}

{% block title %}Snowtricks - Accueil
{% endblock %}

{% block body %}
<div style="position: relative;">
    <img src="{{ asset('homepage_image/pexels-evgenia-kirpichnikova-1973293.jpg') }}" alt="image d'accueil" class="img-fluid w-100">
    <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">
        <h1 class="text-center text-white">Figure de snowboard</h1>
    </div>
</div>

<div class="row">
	{% for trick in tricks %}
		<div class="card my-3" style="width: 18rem;">
			<img src="..." class="card-img-top" alt="...">
			<div class="card-body">
				<h5 class="card-title">{{ trick.name }}</h5>
				<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
				<a href="#" class="btn btn-primary">Go somewhere</a>
			</div>
		</div>
	{% endfor %}
{% endblock %}
